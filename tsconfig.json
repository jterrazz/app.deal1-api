{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "alwaysStrict": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "lib": ["es7"],
    "sourceMap": true,
    "outDir": ".build",
    "baseUrl": "./src",
    "paths": {
      "@logs": ["utils/logs"],
      "@config": ["config"],
      "@entities": ["entities"],
      "@managers/*": ["managers/*"],
      "@middlewares/*": ["middlewares/*"]
    }
  },
  "exclude": ["*.spec.ts", "*.test.ts"],
  "include": ["src/*.ts"]
}
